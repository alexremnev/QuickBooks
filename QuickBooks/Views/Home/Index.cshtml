
@{
    ViewBag.Title = "Index";

}
<script type="text/javascript" src="http://code.jquery.com/jquery.min.js"></script>
<script type="text/javascript" src="https://js.appcenter.intuit.com/Content/IA/intuit.ipp.anywhere-1.3.5.js"></script>
<script type="text/javascript">
    $(document).ready(function () {

        intuit.ipp.anywhere.setup({
            grantUrl: "http://localhost:63793/Home/Result?connect=true",
            datasources: {
                quickbooks: true,
                payments: false
            }
        });


    });
</script>

<div id="connect-to-qbo-div">
 @if (ViewBag.Access == true)
    {
        <p>My app is connected to QuickBooks Online.</p>
    }
    else
    {
        <p>My app is not connected to QuickBooks Online.</p>
    }

    <ipp:connecttointuit></ipp:connecttointuit>
</div>
<div>
    @using (@Html.BeginForm("Recalculate", "Report"))
    {
        <button style="padding: 10px">Recalculate sales tax </button>
    }
    @using (@Html.BeginForm("Create", "Report"))
    {
        <button style="padding: 10px">Create Report</button>
    }
</div>
