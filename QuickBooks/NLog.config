<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd"
      autoReload="true"
      throwExceptions="false"
      internalLogLevel="Off" internalLogFile="c:\temp\nlog-internal.log">
<!--  <variable name="myvar" value="myvalue"/>-->
  <targets>
    <target name="file"  xsi:type="File" fileName="bin/QuickBooksLog.txt" layout="${longdate}|${logger}|${level}|${message}" />
  </targets>
  <rules>
    <logger name="*" minlevel="Warn" writeTo="file" final="false" enabled="true"/>
    <logger name="QuickBooks.*" minlevel="Debug" writeTo="file" enabled="true"/>

    <!-- To show Sql queries in log change enabled on true-->
    <logger name="NHibernate.SQL" minlevel="Debug" writeTo="file" enabled="true"/>
  </rules>
</nlog>
